<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
               name="org.opencastproject.workflow.handler.composer.MultipleWebcamWorkflowOperationHandler"
               immediate="true">
  <implementation class="org.opencastproject.workflow.handler.composer.MultipleWebcamWorkflowOperationHandler"/>
  <property name="service.description" value="Multiple webcam Workflow Operation Handler"/>
  <property name="workflow.operation" value="multiple-webcam"/>
